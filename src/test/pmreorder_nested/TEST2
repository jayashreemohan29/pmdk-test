#
# src/test/test_nested/TEST2 : Test if we modify the object on tx commit, does it persist on recovery?
#

# standard unit test setup
. ../unittest/unittest.sh

# this test verifies the correctness of the tx management functions only
#configure_valgrind pmemcheck force-disable

require_test_type medium
require_fs_type pmem non-pmem
require_build_type debug
require_pmemcheck_version_ge 1 0
require_pmreorder

setup

export PMEMOBJ_COW=1
TEST=2
LAYOUT="nested_test"
BIN="./test_nested_tx$EXESUFFIX"
PMEMCHECK_CMD="$BIN n $LAYOUT $DIR/testfile"
PMREORDER_CMD="$BIN c $TEST $LAYOUT"
CREATE_POOL_CMD="$BIN p $LAYOUT $DIR/testfile"

echo "Creating obj pool ..."
echo $CREATE_POOL_CMD
$CREATE_POOL_CMD

echo "Creating store log ..."
pmreorder_create_store_log $DIR/testfile "$PMEMCHECK_CMD"

echo "Running consistency check ..."
pmreorder_expect_success NoReorderNoCheck pmreorder2.conf "$PMREORDER_CMD"

check

pass
